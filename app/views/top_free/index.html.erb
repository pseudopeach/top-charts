
<ul class="nav nav-pills nav-justified">
  <li><%= link_to "Paid", top_paid_index_path %></li>
  <li class="active"><%= link_to "Free", top_free_index_path %></li>
  <li><%= link_to "Top Grossing", top_grossing_index_path %></li>
</ul>

<%=will_paginate @free %>
<%= page_entries_info @free %>

<table class="table table-condensed">
  <tr>
    <th class="col-sm-1"></th>
    <th class="col-sm-1"></th>
    <th class="col-sm-9"></th>
    <th class="col-sm-1"></th>
  </tr>

  <% @free.each_with_index do |app, index| %>
      <tr data-href="<%= app_url(app) %>">
        <td><%=@free.offset + index + 1 %></td>
        <td><%= image_tag app_icon(app), size:'48' %></td>
        <td>
          <div id="name"><%=app.app_name %></div>
          <div id="company"><%=app.app_company %></div>
          <%= image_tag app_ratings(0,app.rating)%>
          <%= image_tag app_ratings(1,app.rating)%>
          <%= image_tag app_ratings(2,app.rating)%>
          <%= image_tag app_ratings(3,app.rating)%>
          <%= image_tag app_ratings(4,app.rating)%>
          <span id="rating"><%=app.country_rating_cnt %></span>
        </td>
        <td id="price"><%=number_to_currency(app.price) %></td>
      </tr>
  <% end %>
</table>




